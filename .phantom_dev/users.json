{
    "name": "users",
    "table": "users",
    "url": "users",
    "id": "id",
    "fields": [
        {
            "name": "name",
            "typeDB": "varchar(64)",
            "type": "text",
            "select": "name",
            "create": ":name",
            "update": ":name",
            "showInList": true,
            "showInCreate": true,
            "showInUpdate": true,
            "label": "Name"
        },
        {
            "name": "avatar",
            "typeDB": "varchar(64)",
            "type": "file",
            "select": "avatar",
            "create": ":avatar",
            "update": ":avatar",
            "showInList": true,
            "showInCreate": true,
            "showInUpdate": true,
            "label": "Avatar"
        },
        {
            "name": "email",
            "typeDB": "varchar(64)",
            "type": "email",
            "select": "email",
            "create": ":email",
            "update": ":email",
            "showInList": true,
            "showInCreate": true,
            "showInUpdate": true,
            "label": "Email"
        },
        {
            "name": "phone",
            "typeDB": "varchar(64)",
            "type": "tel",
            "select": "phone",
            "create": ":phone",
            "update": ":phone",
            "showInList": true,
            "showInCreate": true,
            "showInUpdate": true,
            "label": "Phone"
        },
        {
            "name": "status",
            "typeDB": "varchar(64)",
            "type": "text",
            "select": "status",
            "create": ":status",
            "update": ":status",
            "showInList": true,
            "showInCreate": true,
            "showInUpdate": true,
            "label": "Status"
        },
        {
            "name": "username",
            "typeDB": "varchar(64)",
            "type": "text",
            "select": "username",
            "create": ":username",
            "update": ":username",
            "showInList": true,
            "showInCreate": true,
            "showInUpdate": true,
            "label": "Username"
        },
        {
            "name": "password",
            "typeDB": "varchar(64)",
            "type": "password",
            "select": "",
            "create": "${md5($password)}",
            "update": "${md5($password)}",
            "showInList": false,
            "showInCreate": true,
            "showInUpdate": true,
            "label": "Password"
        }
    ],
    "where": "",
    "sort": "-id",
    "filters": [
        {
            "declaration": "findText(text)",
            "expression": "and (name like ${contains($text)} or username like ${contains($text)} or email like ${contains($text)} or phone like ${contains($text)})"
        },
        {
            "declaration": "login(username,password)",
            "expression": "and status='ACTIVE' and username=:username and password=${md5($password)}"
        }
    ],
    "relationships": [
        {
            "name": "roles",
            "params": [
                {
                    "name": "user_id",
                    "value": "$id"
                }
            ],
            "model": "user_roles"
        },
        {
            "name": "permissions",
            "params": [
                {
                    "name": "user_id",
                    "value": "$id"
                }
            ],
            "model": "user_permissions"
        }
    ],
