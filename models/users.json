{
	"class": "JsonApi",
	"url": "users",
	"table": "users",
	"id": "id",
	"attributes": {
		"name": "name",
		"username": "username",
		"avatar": "avatar",
		"email": "email",
		"phone": "phone",
		"status": "status"
	},
	"where": [],
	"filters": {
		"findText(text)": "and (name like ${contains($text)} or username like ${contains($text)} or email like ${contains($text)} or phone like ${contains($text)})",
		"login(username,password)": "and status='ACTIVE' and username=:username and password=${md5($password)}"
	},
	"sort": [
		"-id"
	],
	"create": {
		"name": ":name",
		"username": ":username",
		"avatar": ":avatar",
		"email": ":email",
		"phone": ":phone",
		"status": ":status",
		"password": ":password"
	},
	"update": {
		"name": ":name",
		"username": ":username",
		"avatar": ":avatar",
		"email": ":email",
		"phone": ":phone",
		"status": ":status",
		"password": ":password"
	},
	"delete": {},
	"relationships": {
		"roles": {
			"model": "user_roles",
			"params": {
				"user_id": "$id"
			}
		},
		"permissions": {
			"model": "user_permissions",
			"params": {
				"user_id": "$id"
			}
		}
	},
	"labels": {
		"_model": "Users",
		"_models": "Users",
		"name": "Name",
		"username": "Username",
		"avatar": "Avatar",
		"email": "Email",
		"phone": "Phone",
		"status": "Status"
	},
	"ui": {
		"name": {
			"type": "text"
		},
		"username": {
			"type": "text"
		},
		"avatar": {
			"type": "image"
		},
		"email": {
			"type": "email"
		},
		"phone": {
			"type": "tel"
		},
		"status": {
			"type": "text"
		},
		"_actions": {
			"control": "actions",
			"value": "attributes.id",
			"actions": [
				"edit",
				"view"
			]
		}
	}
}