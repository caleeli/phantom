{
	"class": "JsonApi",
	"url": "users",
	"table": "users",
	"id": "id",
	"attributes": {
		"name": "name",
		"username": "username",
		"avatar": "'images/avatar/avatar-1.jpg'",
		"email": "email",
		"phone": "phone"
	},
	"where": [
		"and status='ACTIVE'"
	],
	"filters": {
		"findText(text)": "and (name like ${contains($text)} or username like ${contains($text)} or email like ${contains($text)} or phone like ${contains($text)})"
	},
	"create": {
		"name": ":name",
		"email": ":email",
		"phone": ":phone",
		"password": "{{md5(password)}}"
	},
	"update": {
		"name": ":name",
		"email": ":email",
		"phone": ":phone"
	},
	"delete": {
		"status": "'DELETED'"
	},
	"relationships": {
		"roles": {
			"model": "user_roles",
			"params": {
				"user_id": "$id"
			}
		},
		"permissions": {
			"model": "user_permissions",
			"params": {
				"user_id": "$id"
			}
		}
	},
	"labels": {
		"_model": "Usuario",
		"_models": "Usuarios",
		"id": "ID",
		"name": "Nombre",
		"email": "E-mail",
		"phone": "Teléfono",
		"password": "Contraseña"
	},
	"ui": {
		"id": {},
		"name": {},
		"email": {
			"type": "email"
		},
		"phone": {
			"type": "tel"
		},
		"_actions": {
			"value": "attributes.id",
			"actions": [
				"edit",
				"view"
			],
			"control": "actions"
		}
	}
}