{
	"class": "JsonApi",
	"url": "transacciones",
	"table": "transacciones",
	"id": "id",
	"attributes": {
		"fecha": "fecha",
		"nombre": "nombre",
		"cuenta": "cuenta",
		"ingreso": "ingreso",
		"egreso": "egreso"
	},
	"where": [],
	"filters": {
		"findText(text)": "and (nombre like ${contains($text)} or cuenta like ${contains($text)} or id=:text)"
	},
	"sort": [
		"-id"
	],
	"create": {
		"fecha": ":fecha",
		"cuenta": ":cuenta",
		"nombre": ":nombre",
		"ingreso": ":ingreso",
		"egreso": ":egreso"
	},
	"update": {
		"fecha": ":fecha",
		"nombre": ":nombre",
		"cuenta": ":cuenta",
		"ingreso": ":ingreso",
		"egreso": "egreso"
	},
	"delete": {},
	"relationships": {},
	"labels": {
		"_model": "Transacción",
		"_models": "Caja",
		"id": "Nro de transacción",
		"fecha": "Fecha de transacción",
		"nombre": "Cliente",
		"cuenta": "Cuenta",
		"ingreso": "Ingreso",
		"egreso": "Egreso"
	},
	"ui": {
		"id": {},
		"fecha": {
			"type": "date"
		},
		"cuenta": {
			"type": "number",
			"list": {
				"model": "clientes",
				"params": {
					"filter": [
						"findCuenta(${value})"
					]
				},
				"value": "cuenta",
				"text": "nombre",
				"on:select": [
					"set(nombre, ${nombre})"
				]
			}
		},
		"nombre": {
			"type": "text"
		},
		"ingreso": {
			"type": "number",
			"align": "right",
			"format": "Bs. ${currency(value)}"
		},
		"egreso": {
			"type": "number",
			"align": "right",
			"format": "Bs. ${currency(value)}"
		},
		"_actions": {
			"value": "attributes.id",
			"actions": [
				"print"
			],
			"control": "actions"
		}
	},
	"create_buttons": {
		"ingreso": {
			"icon": "plus",
			"type": "submit",
			"attributes": {
				"fecha": "",
				"nombre": "",
				"cuenta": "",
				"ingreso": "1000",
				"egreso": ""
			}
		},
		"egreso": {
			"icon": "minus",
			"type": "reset",
			"attributes": {
				"fecha": "",
				"nombre": "",
				"cuenta": "",
				"ingreso": "",
				"egreso": "1000"
			}
		}
	}
}